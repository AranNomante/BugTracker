@model BugTracker.Models.Bug

@{
    ViewBag.Title = "Delete";
}
<!--Delete Değişmeyecek-->
<h2>Delete</h2>
@if (ViewBag.msg.Equals("admin"))
{


    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Bug</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.severity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.severity)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.state)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.state)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.submit_time)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.submit_time)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.version)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.version)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.fix_time)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.fix_time)
            </dd>

            <dt>
                Assignee
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Assignee1.email)
            </dd>

            <dt>
                User
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User.email)
            </dd>

        </dl>

        @using (Html.BeginForm("Delete", "Bugs", FormMethod.Post))
        {
            <input type="hidden" name="prevPage" value="@ViewBag.urlPrev" />
            <input type="hidden" name="id" value="@Model.title" />
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                <a href="@ViewBag.urlPrev">Previous Page</a>
            </div>
        }
    </div>
