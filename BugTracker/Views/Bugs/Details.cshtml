@model BugTracker.Models.Bug

@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
<div>
    <!--Display image-->
    <h4>Model.title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.severity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.severity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.state)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.state)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.submit_time)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.submit_time)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.version)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.version)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.fix_time)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fix_time)
        </dd>

        @if (!ViewBag.msg.Equals("user") && !ViewBag.msg.Equals("no"))
        {

            <dt>
                Assignee Email
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Assignee1.email)
            </dd>

            <dt>
                User Email
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User.email)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.fix_description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fix_description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd>
            @if (ViewBag.imgurl != null)
            {
                <img src="@ViewBag.imgurl" width="800" height="800" />
            }
            else
            {
                <p>No Screenshot</p>
            }
        </dd>

    </dl>
</div>
<p>
    <ul>
        @if (!ViewBag.msg.Equals("no") && !ViewBag.msg.Equals("user"))
        {
            if (ViewBag.msg.Equals("admin") || (Model.assignee != null && Model.assignee.Equals(ViewBag.clrassignee)))
            {
                <li>  @Html.ActionLink("Edit", "Edit", new { id = Model.title, prevPage = Request.Url.ToString() })</li>
            }

        }
        <li><a href="@ViewBag.urlPrev">Previous Page</a></li>
    </ul>
</p>
