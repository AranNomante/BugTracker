@model BugTracker.Models.Image

@if (ViewBag.msg.Equals("admin") || (ViewBag.msg.Equals("assignee") && (ViewBag.imgasg!=null && ViewBag.imgasg.Equals(ViewBag.clrassignee)) ))
{
    <div class="row col-md-12 top-buffer">
        <div class="col col-md-12">
            <h3 class="display-4">Delete Image</h3>
        </div>
    </div>
    <div class="row col-md-12 top-buffer">
        <div class="col col-md-12">
            <h2 class="text-danger">Are you sure you want to delete this?</h2>
        </div>
    </div>

    <div class="row top-buffer col-md-12">
        <div class="col col-md-12">
            <table class="table table-striped text-center table-bordered">
                <tr>
                    <th>
                        <p class="text-secondary">Name</p>
                    </th>
                    <th>
                        <p class="text-secondary">Content Type</p>
                    </th>

                    <th>
                        <p class="text-secondary">Bug Title</p>
                    </th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ContentType)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.Bug.title)
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row col-md-12 top-buffer">
        <div class="col col-md-12">
            <img src="@ViewBag.imgurl" class="img-fluid" alt="Responsive image" />
        </div>
    </div>

    using (Html.BeginForm("DeleteImg", "Bugs", FormMethod.Post))
    {
        <input type="hidden" name="prevPage" value="@ViewBag.urlPrev" />
        <input type="hidden" name="id" value="@Model.id" />
        <div class="row top-buffer text-center col-md-12">
            <div class="col col-md-6">
                <a class="btn btn-outline-primary" href="@ViewBag.urlPrev">Previous Page</a>
            </div>
            <div class="col col-md-6">
                <input type="submit" value="Delete" class="btn btn-outline-primary" />
            </div>
        </div>
    }

}
