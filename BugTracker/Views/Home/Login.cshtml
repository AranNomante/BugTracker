
@model BugTracker.Models.Credentials
@{
    ViewBag.Title = "Login";

}
<section>
    <div>
        @using (Html.BeginForm("Verify", "Home", FormMethod.Post))
        {
            <fieldset>
                <legend>Login</legend>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "email@example.com" })
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "exampleInputPassword1", @placeholder = "Password" })
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </fieldset>
        }
    </div>
</section>