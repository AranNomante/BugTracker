@model BugTracker.Models.Admin

@{
    ViewBag.Title = "Edit";
}

@if (ViewBag.msg.Equals("admin"))
{
    if (ViewBag.adm.Equals("m") || Model.email.Equals(ViewBag.adm))
    {
        <div class="row col-md-12 top-buffer">
            <div class="col col-md-12">
                <h3 class="display-4">Edit Admin</h3>
            </div>
        </div>
        <div class="row col-md-12 top-buffer">
            <div class="col col-md-12">
                <h1 class="text-secondary">Editing:"@Model.email"</h1>
            </div>
        </div>
        using (Html.BeginForm("Edit", "Admins", FormMethod.Post, new { name = "admedit" }))
        {
            <div class="row col-md-12 top-buffer">
                <input type="hidden" name="prevPage" value="@ViewBag.urlPrev" />
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.email)

                    <div class="form-group">
                        <div class="row col-md-12">
                            <div class="col col-md-12">
                                <p class="text-secondary">Password</p>
                            </div>
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", name = "password" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>
            <div class="row col-md-12">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">

                        <input type="submit" value="Save" class="btn btn-outline-primary" />
                    </div>
                    <div class="form-group top-buffer">
                        <div class="col-md-offset-2 col-md-10">
                            <a href="@ViewBag.urlPrev" class="btn btn-outline-primary">Previous Page</a>
                        </div>
                    </div>

                </div>

            </div>
        }

    }
}