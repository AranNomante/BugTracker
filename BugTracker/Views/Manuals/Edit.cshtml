@model BugTracker.Models.Manuals

@{
    ViewBag.Title = "Edit";
}
@if (ViewBag.msg.Equals("admin"))
{
    if (ViewBag.adm.Equals("m"))
    {
        <div class="row col-md-12 top-buffer">
            <div class="col col-md-12">
                <h3 class="display-4">Edit Manual</h3>
            </div>
        </div>
        <div class="row col-md-12 top-buffer">
            <div class="col col-md-12">
                @if (Model.id == 1)
                {
                    <h1 class="text-secondary">
                        Editing: Non-User Manual
                    </h1>
                }
                else if (Model.id == 2)
                {
                    <h1 class="text-secondary">
                        Editing: User Manual
                    </h1>
                }
                else if (Model.id == 3)
                {
                    <h1 class="text-secondary">
                        Editing: Assignee Manual
                    </h1>
                }
                else if (Model.id == 4)
                {
                    <h1 class="text-secondary">
                        Editing: Admin Manual
                    </h1>
                }
                else if (Model.id == 5)
                {
                    <h1 class="text-secondary">
                        Editing: Master Admin Manual
                    </h1>
                }
            </div>
        </div>
        using (Html.BeginForm("Edit", "Manuals", FormMethod.Post, new { name = "editman" }))
        {


            <input type="hidden" name="prevPage" value="@ViewBag.urlPrev" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)
            <div class="row col-md-12 top-buffer">
                <div class="col col-md-12">
                    @Html.TextAreaFor(model => model.text, new { htmlAttributes = new { @class = "form-control", maxlength = 4000, name = "mantext", cols="131" } })
                    @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row col-md-12 top-buffer text-center">
                <div class="col col-md-6">
                    <a href="@ViewBag.urlPrev" class="btn btn-outline-primary">Previous Page</a>
                </div>
                <div class="col col-md-6">
                    <input type="submit" value="Save" class="btn btn-outline-primary" />
                </div>

            </div>
        }


    }
}